<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/item_top_exam_date" />

    <LinearLayout
        android:id="@+id/ll_date"
        android:layout_width="fill_parent"
        android:layout_height="140.0dip"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="59.0dip"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="11.5dip"
                android:gravity="center_vertical"
                android:text="时间"
                android:textColor="@color/color_343434"
                android:textSize="16.0dip"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/img_time"
                android:layout_width="35.0dip"
                android:layout_height="fill_parent"
                android:layout_gravity="center_vertical"
                android:paddingLeft="9.0dip"
                android:paddingTop="22.0dip"
                android:paddingRight="9.0dip"
                android:paddingBottom="22.0dip"
                android:src="@mipmap/img_rl" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="32.0dip"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:gravity="center"
                android:text="日"
                android:textColor="@color/color_343434"
                android:textSize="14.0dip" />

            <TextView
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:gravity="center"
                android:text="一"
                android:textColor="@color/color_343434"
                android:textSize="14.0dip" />

            <TextView
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:gravity="center"
                android:text="二"
                android:textColor="@color/color_343434"
                android:textSize="14.0dip" />

            <TextView
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:gravity="center"
                android:text="三"
                android:textColor="@color/color_343434"
                android:textSize="14.0dip" />

            <TextView
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:gravity="center"
                android:text="四"
                android:textColor="@color/color_343434"
                android:textSize="14.0dip" />

            <TextView
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:gravity="center"
                android:text="五"
                android:textColor="@color/color_343434"
                android:textSize="14.0dip" />

            <TextView
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:gravity="center"
                android:text="六"
                android:textColor="@color/color_343434"
                android:textSize="14.0dip" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="25.0dip"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.0">

                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="24.0dip"
                    android:layout_height="24.0dip"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:textColor="@color/color_9a9a9a"
                    android:textSize="12.0dip" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.0">

                <TextView
                    android:id="@+id/tv2"
                    android:layout_width="24.0dip"
                    android:layout_height="24.0dip"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:textColor="@color/color_9a9a9a"
                    android:textSize="12.0dip" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.0">

                <TextView
                    android:id="@+id/tv3"
                    android:layout_width="24.0dip"
                    android:layout_height="24.0dip"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:textColor="@color/color_9a9a9a"
                    android:textSize="12.0dip" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.0">

                <TextView
                    android:id="@+id/tv4"
                    android:layout_width="24.0dip"
                    android:layout_height="24.0dip"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:textColor="@color/color_9a9a9a"
                    android:textSize="12.0dip" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.0">

                <TextView
                    android:id="@+id/tv5"
                    android:layout_width="24.0dip"
                    android:layout_height="24.0dip"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:textColor="@color/color_9a9a9a"
                    android:textSize="12.0dip" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.0">

                <TextView
                    android:id="@+id/tv6"
                    android:layout_width="24.0dip"
                    android:layout_height="24.0dip"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:textColor="@color/color_9a9a9a"
                    android:textSize="12.0dip" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.0">

                <TextView
                    android:id="@+id/tv7"
                    android:layout_width="24.0dip"
                    android:layout_height="24.0dip"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:textColor="@color/color_9a9a9a"
                    android:textSize="12.0dip" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#ffefefef">

        <ListView
            android:id="@+id/listview_examday"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10.0dip"
            android:background="@color/white"
            android:divider="#00000000"
            android:dividerHeight="0.0dip"
            android:overScrollMode="never"
            android:scrollbars="none" />
    </RelativeLayout>
</LinearLayout>