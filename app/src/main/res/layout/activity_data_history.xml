<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50.0dip"
        android:background="@color/white">

        <ImageView
            android:id="@+id/img_top_return"
            android:layout_width="40.0dip"
            android:layout_height="fill_parent"
            android:paddingLeft="11.0dip"
            android:paddingRight="21.0dip"
            android:src="@mipmap/img_new_back_black" />

        <LinearLayout
            android:id="@+id/radiogroup_data_history"
            android:layout_width="250.0dip"
            android:layout_height="fill_parent"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_marginRight="15.0dip"
                android:layout_weight="1.0"
                android:paddingLeft="20.0dip"
                android:paddingRight="20.0dip">

                <TextView
                    android:id="@+id/radiobutton_lx"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:button="@null"
                    android:checked="true"
                    android:gravity="center"
                    android:text="智能"
                    android:textColor="#ff558cf4"
                    android:textSize="16.0dip" />

                <TextView
                    android:id="@+id/tv_line_left"
                    android:layout_width="23.0dip"
                    android:layout_height="2.0dip"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:background="#ff558cf4" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_marginLeft="15.0dip"
                android:layout_weight="1.0"
                android:paddingLeft="20.0dip"
                android:paddingRight="20.0dip">

                <RadioButton
                    android:id="@+id/radiobutton_sj"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:button="@null"
                    android:gravity="center"
                    android:text="试卷"
                    android:textColor="#ff333333"
                    android:textSize="16.0dip" />

                <TextView
                    android:id="@+id/tv_line_right"
                    android:layout_width="23.0dip"
                    android:layout_height="2.0dip"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:background="#ff558cf4"
                    android:visibility="gone" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

    <View style="@style/style_view_all" />

    <ListView
        android:id="@+id/listview_data_history"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:divider="#00000000"
        android:dividerHeight="0.0dip"
        android:overScrollMode="never"
        android:scrollbars="none" />
</LinearLayout>