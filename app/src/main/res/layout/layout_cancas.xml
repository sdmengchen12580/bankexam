<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/transparent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50.0dip"
            android:background="@color/white"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_cancas_cancle"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:adjustViewBounds="true"
                android:scaleType="center"
                android:src="@mipmap/img_cg_colse" />

            <ImageView
              android:id="@+id/img_cancas_back"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:adjustViewBounds="true"
                android:clickable="false"
                android:scaleType="center"
                android:src="@mipmap/img_cg_back"
                android:visibility="gone" />

            <ImageView
               android:id="@+id/img_cancas_delete"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:adjustViewBounds="true"
                android:background="@null"
                android:scaleType="center"
                android:src="@mipmap/img_cg_delect"
                android:visibility="gone" />

            <ImageView
               android:id="@+id/img_cancas_return"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:adjustViewBounds="true"
                android:clickable="false"
                android:scaleType="center"
                android:src="@mipmap/img_cg_go"
                android:visibility="gone" />
        </LinearLayout>

        <android.gesture.GestureOverlayView
            android:id="@+id/cancas_gesture"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#50323232" />
    </LinearLayout>
</LinearLayout>