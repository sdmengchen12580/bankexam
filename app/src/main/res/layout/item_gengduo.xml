<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
       android:id="@+id/ll_pop_gengduo"
        android:layout_width="140.0dip"
        android:layout_height="wrap_content"
        android:background="@color/color_exam_caozuo"
        android:orientation="vertical">

        <LinearLayout
           android:id="@+id/ll_fengxiang"
            android:layout_width="fill_parent"
            android:layout_height="50.0dip"
            android:orientation="horizontal">

            <ImageView
             android:id="@+id/image_share"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="2.0"
                android:adjustViewBounds="true"
                android:scaleType="center"
                android:src="@mipmap/day_shiti_icon_share" />

            <TextView
           android:id="@+id/text_share"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="3.0"
                android:gravity="center"
                android:text="分享本题"
                android:textColor="@color/color_share"
                android:textSize="14.0sp" />
        </LinearLayout>

        <LinearLayout
        android:id="@+id/ll_jiucuo"
            android:layout_width="fill_parent"
            android:layout_height="50.0dip"
            android:orientation="horizontal">

            <ImageView
           android:id="@+id/image_jiucuo"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="2.0"
                android:adjustViewBounds="true"
                android:scaleType="center"
                android:src="@mipmap/icon_jiucuo" />

            <TextView
              android:id="@+id/text_jiucuo"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="3.0"
                android:gravity="center"
                android:text="纠错本题"
                android:textColor="@color/color_share"
                android:textSize="14.0sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50.0dip"
            android:orientation="horizontal">

            <RadioGroup
                android:id="@+id/text_zt_group"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal">

                <RadioButton
                  android:id="@+id/text_zt_one"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:button="@null"
                    android:checked="true"
                    android:gravity="center"
                    android:text="Aa"
                    android:textColor="@color/color_radio_exam_text"
                    android:textSize="14.0sp" />

                <RadioButton
                   android:id="@+id/text_zt_two"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:button="@null"
                    android:gravity="center"
                    android:text="Aa"
                    android:textColor="@color/color_radio_exam_text"
                    android:textSize="16.0sp" />

                <RadioButton
                    android:id="@+id/text_zt_three"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:button="@null"
                    android:gravity="center"
                    android:text="Aa"
                    android:textColor="@color/color_radio_exam_text"
                    android:textSize="18.0sp" />
            </RadioGroup>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="50.0dip">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_centerInParent="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_night"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center"
                    android:scaleType="center"
                    android:src="@mipmap/subject_switch_day_left" />

                <ImageView
                    android:id="@+id/img_day"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center"
                    android:scaleType="center"
                    android:src="@mipmap/subject_switch_day_right" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>