<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_container"
    android:layout_width="fill_parent"
    android:layout_height="97.0dip"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="fill_parent"
        android:layout_height="42.5dip"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textview_zhibo_name"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_marginLeft="13.0dip"
            android:layout_weight="3.0"
            android:gravity="center_vertical"
            android:text="通用就业能力测试"
            android:textColor="@color/color_343434"
            android:textSize="15.0dip"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/ll_price"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center">

                <TextView
                  android:id="@+id/textview_zhibo_price_bz"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="bottom|center"
                    android:text="¥"
                    android:textColor="@color/color_price"
                    android:textSize="13.0dip" />

                <TextView
                    android:id="@+id/textview_zhibo_price"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="3.0dip"
                    android:gravity="center"
                    android:text="199"
                    android:textColor="@color/color_price"
                    android:textSize="16.0dip" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout2"
        android:layout_width="fill_parent"
        android:layout_height="25.0dip"
        android:layout_below="@+id/layout1"
        android:layout_marginLeft="12.0dip"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="11.0dip"
            android:layout_height="11.0dip"
            android:src="@mipmap/img_clock" />

        <TextView
            android:id="@+id/textview_zhibo_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6.0dip"
            android:text="2017.03.18-2017.04.17"
            android:textColor="@color/color_9a9a9a"
            android:textSize="12.0dip" />

        <TextView
           android:id="@+id/textview_zhibo_keshi"
            style="@style/style_item_zb_info_3"
            android:layout_marginLeft="13.0dip"
            android:text="(50讲)"
            android:textColor="@color/color_343434" />
    </LinearLayout>

    <LinearLayout
       android:id="@+id/layout3"
        android:layout_width="fill_parent"
        android:layout_height="20.0dip"
        android:layout_below="@+id/layout2"
        android:layout_marginLeft="13.0dip"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="11.0dip"
            android:layout_height="11.0dip"
            android:src="@mipmap/img_small_people" />

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6.0dip"
            android:layout_weight="1.0"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textview_zhibo_goumairenshu"
                style="@style/style_item_zl_botton_text1"
                android:text="0" />

            <TextView
                style="@style/style_item_zl_botton_text1"
                android:text="人已购" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_gravity="right"
            android:layout_marginRight="12.5dip"
            android:layout_weight="1.0"
            android:gravity="center|right"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/textview_zhibo_"
                style="@style/style_item_zl_botton_text1"
                android:text="距停售时间还有"
                android:textColor="@color/color_568cf4" />

            <TextView
                android:id="@+id/textview_zhibo_tinshou"
                style="@style/style_item_zl_botton_text1"
                android:text="5天"
                android:textColor="@color/color_price" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_des"
        android:layout_width="70.0dip"
        android:layout_height="25.0dip"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="12.5dip"
        android:background="@drawable/shape_12_stroke_558cf4_bg"
        android:gravity="center"
        android:text="进入详情"
        android:textColor="@color/white"
        android:textSize="13.0dip" />

    <View
        style="@style/style_view_h1"
        android:layout_height="0.5dip"
        android:layout_below="@+id/layout3"
        android:layout_marginTop="7.0dip"
        android:layout_marginBottom="0.5dip" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10.0dip"
        android:paddingTop="2.0dip"
        android:paddingBottom="10.0dip"
        android:visibility="gone">

        <TextView
            style="@style/style_item_zb_info_2"
            android:text="授课老师：" />

        <TextView
            android:id="@+id/textview_zhibo_teacher"
            style="@style/style_item_zb_info_2"
            android:text="张三 李四" />
    </LinearLayout>
</RelativeLayout>