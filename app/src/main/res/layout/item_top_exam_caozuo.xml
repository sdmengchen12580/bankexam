<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_exam_caozuo"
    android:layout_width="fill_parent"
    android:layout_height="40.0dip"
    android:background="@color/color_exam_caozuo"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_exam_cgz"
        android:layout_width="0.0dip"
        android:layout_height="fill_parent"
        android:layout_weight="1.0"
        android:adjustViewBounds="true"
        android:scaleType="center"
        android:src="@mipmap/shiti_icon_caogao" />

    <ImageView
        android:id="@+id/img_exam_dtk"
        android:layout_width="0.0dip"
        android:layout_height="fill_parent"
        android:layout_weight="1.0"
        android:adjustViewBounds="true"
        android:scaleType="center"
        android:src="@mipmap/shiti_icon_datika" />

    <ImageView
        android:id="@+id/img_exam_sc"
        android:layout_width="0.0dip"
        android:layout_height="fill_parent"
        android:layout_weight="1.0"
        android:adjustViewBounds="true"
        android:scaleType="center"
        android:src="@mipmap/shiti_icon_collect" />

    <ImageView
        android:id="@+id/img_exam_biaoji"
        android:layout_width="0.0dip"
        android:layout_height="fill_parent"
        android:layout_weight="1.0"
        android:adjustViewBounds="true"
        android:scaleType="center"
        android:src="@mipmap/icon_biaozhu" />

    <TextView
        android:id="@+id/img_exam_time"
        android:layout_width="0.0dip"
        android:layout_height="fill_parent"
        android:layout_weight="1.0"
        android:gravity="center"
        android:text="00:00"
        android:textColor="@color/white"
        android:textSize="12.0sp" />

    <ImageView
        android:id="@+id/img_exam_gengduo"
        android:layout_width="0.0dip"
        android:layout_height="fill_parent"
        android:layout_weight="1.0"
        android:adjustViewBounds="true"
        android:scaleType="center"
        android:src="@mipmap/day_shiti_icon_more" />
</LinearLayout>