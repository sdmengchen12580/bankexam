<?xml version="1.0" encoding="utf-8"?>
<com.udit.bankexam.view.ShadowContainer xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="fill_parent"
    android:layout_height="120.0dip"
    app:containerCornerRadius="4.0dip"
    app:containerDeltaLength="10.0dip"
    app:containerShadowColor="#c8dbdbdb"
    app:containerShadowRadius="10.0dip"
    app:deltaX="0.0dip"
    app:deltaY="4.0dip">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="100.0dip"
        android:background="@drawable/shape_4_corner_white_bg">

        <com.udit.bankexam.view.CustomFiveAngleImg
       android:id="@+id/img_video"
            android:layout_width="83.0dip"
            android:layout_height="75.0dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="11.5dip"
            android:scaleType="centerCrop" />

        <TextView
        android:id="@+id/tv_video_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9.5dip"
            android:layout_marginTop="24.0dip"
            android:layout_toLeftOf="@+id/rl_play"
            android:layout_toRightOf="@+id/img_video"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="视频名称"
            android:textColor="@color/color_333333"
            android:textSize="14.0dip" />

        <TextView
         android:id="@+id/tv_video_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="9.5dip"
            android:layout_marginBottom="19.0dip"
            android:layout_toLeftOf="@+id/rl_play"
            android:layout_toRightOf="@+id/img_video"
            android:maxLines="2"
            android:text="章节：0       视频：0"
            android:textColor="@color/color_666666"
            android:textSize="12.0dip" />

        <RelativeLayout
           android:id="@+id/rl_play"
            android:layout_width="78.0dip"
            android:layout_height="32.5dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10.0dip">

            <ImageView
                android:layout_width="78.0dip"
                android:layout_height="32.5dip"
                android:src="@mipmap/img_play" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="5.0dip"
                android:gravity="center"
                android:text="去播放"
                android:textColor="@color/white"
                android:textSize="13.0dip" />
        </RelativeLayout>
    </RelativeLayout>
</com.udit.bankexam.view.ShadowContainer>