<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="80.0dip"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="60.0dip"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="6.0"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textview_examinfo_name"
                android:layout_width="fill_parent"
                android:layout_height="0.0dip"
                android:layout_weight="1.0"
                android:gravity="center_vertical"
                android:paddingLeft="10.0dip"
                android:text="通用就业能力测试"
                android:textColor="@color/color_333333"
                android:textSize="15.0dip" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0.0dip"
                android:layout_weight="1.0"
                android:orientation="horizontal"
                android:paddingLeft="10.0dip"
                android:visibility="gone">

                <TextView
                    style="@style/style_item_zb_info_2"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical"
                    android:text="课程安排：" />

                <TextView
                    android:id="@+id/textview_examinfo_time"
                    style="@style/style_item_zb_info_2"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical"
                    android:text="2017.03.18至2017.04.17" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_examinfo_price"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/textview_examinfo_price_bz"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:text="¥"
                android:textColor="@color/color_price"
                android:textSize="12.0sp" />

            <TextView
                android:id="@+id/textview_examinfo_price"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:text="199"
                android:textColor="@color/color_price"
                android:textSize="16.0sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/go_lianxi"
            android:layout_width="75.0dip"
            android:layout_height="25.0dip"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="22.5dip"
            android:background="@drawable/shape_12_stroke_558cf4_bg"
            android:gravity="center"
            android:text="去练习"
            android:textColor="@color/white"
            android:textSize="14.0dip" />
    </LinearLayout>

    <LinearLayout
        style="@style/style_item_zl_bottom_ll"
        android:paddingLeft="10.0dip"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                style="@style/style_item_zl_botton_text"
                android:text="购买人数：" />

            <TextView
                android:id="@+id/textview_examinfo_goumairenshu"
                style="@style/style_item_zl_botton_text"
                android:text="0" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="1.0"
            android:gravity="right"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                style="@style/style_item_zl_botton_text"
                android:text="可参与练习时间还有" />

            <TextView
                android:id="@+id/textview_examinfo_tinshou"
                style="@style/style_item_zl_botton_text"
                android:text="5天"
                android:textColor="@color/color_price" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>