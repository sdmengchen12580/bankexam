<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:minHeight="60.0dip">

    <LinearLayout
        style="@style/style_item_zb_ll"
        android:minHeight="60.0dip">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="10.0dip"
            android:paddingTop="2.0dip"
            android:paddingBottom="5.0dip">

            <TextView
               android:id="@+id/textview_date_teacher_name"
                style="@style/style_item_zb_info_2"
                android:text="张三 李四" />

            <TextView
                style="@style/style_item_zb_info_2"
                android:layout_marginLeft="3.0dip"
                android:layout_marginRight="3.0dip"
                android:text="—" />

            <TextView
                android:id="@+id/textview_date_kecheng_name"
                style="@style/style_item_zb_info_2"
                android:text="语言理解与表达" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="10.0dip"
            android:paddingTop="5.0dip"
            android:paddingBottom="5.0dip">

            <TextView
                style="@style/style_item_zb_info_2"
                android:text="课程安排：" />

            <TextView
              android:id="@+id/textview_date_kecheng_time"
                style="@style/style_item_zb_info_2"
                android:text="2017.03.18-2017.04.17" />

            <TextView
                style="@style/style_item_zb_info_2"
                android:layout_marginLeft="3.0dip"
                android:text="(50讲)"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>