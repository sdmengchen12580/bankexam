<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.newui.ques.QuesInnerFragment">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/rl_no_date"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img"
                    android:layout_width="141.25dip"
                    android:layout_height="104.099976dip"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/img_no_date" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="30.0dip"
                    android:layout_below="@+id/img"
                    android:layout_marginTop="16.0dip"
                    android:gravity="center"
                    android:text="暂无记录"
                    android:textColor="@color/color_9999999"
                    android:textSize="15.0dip" />
            </LinearLayout>

        </RelativeLayout>

    </android.support.v4.widget.SwipeRefreshLayout>

</FrameLayout>