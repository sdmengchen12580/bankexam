<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="fill_parent"
    android:layout_height="141.0dip"
    android:orientation="vertical">

    <com.udit.bankexam.view.ShadowContainer
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerVertical="true"
        app:containerCornerRadius="4.0dip"
        app:containerDeltaLength="8.0dip"
        app:containerShadowColor="#78dbdbdb"
        app:containerShadowRadius="8.0dip"
        app:deltaX="0.0dip"
        app:deltaY="3.0dip">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="125.0dip"
            android:layout_marginLeft="12.0dip"
            android:layout_marginRight="12.0dip"
            android:background="@drawable/shape_4_corner_white_bg"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="37.5dip">

                <ImageView
                    android:id="@+id/img_clock"
                    android:layout_width="16.0dip"
                    android:layout_height="13.0dip"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="4.5dip"
                    android:src="@mipmap/img_ms_clock" />

                <TextView
                    android:id="@+id/text_message_title"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="5.5dip"
                    android:layout_marginRight="19.5dip"
                    android:layout_toRightOf="@+id/img_clock"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="測試"
                    android:textColor="@color/color_333333"
                    android:textSize="15.0dip"
                    android:textStyle="bold" />
            </RelativeLayout>

            <TextView
               android:id="@+id/text_message_content"
                android:layout_width="fill_parent"
                android:layout_height="0.0dip"
                android:layout_marginLeft="26.0dip"
                android:layout_marginRight="23.5dip"
                android:layout_weight="1.0"
                android:ellipsize="end"
                android:lineSpacingExtra="7.0dip"
                android:maxLines="2"
                android:text="測試內容測試內容測試內容測試內容測試內容測試內容測試內容測試內容測試內容"
                android:textColor="@color/color_666666"
                android:textSize="13.0dip" />

            <View
                style="@style/style_line"
                android:layout_marginLeft="10.5dip"
                android:layout_marginRight="10.5dip" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="40.0dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="26.5dip"
                    android:gravity="center_vertical"
                    android:text="查看详情>>"
                    android:textColor="@color/color_558CF4"
                    android:textSize="14.0dip" />

                <TextView
                  android:id="@+id/text_message_time"
                    android:layout_width="wrap_content"
                    android:layout_height="40.0dip"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="14.0dip"
                    android:gravity="center_vertical"
                    android:text="2017-00-22 99:99:99"
                    android:textColor="@color/color_9999999"
                    android:textSize="12.0dip" />
            </RelativeLayout>
        </LinearLayout>
    </com.udit.bankexam.view.ShadowContainer>
</RelativeLayout>