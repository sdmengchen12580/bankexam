<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="50.0dip"
    android:background="@color/white">

    <ImageView
        android:id="@+id/img_top_return"
        android:layout_width="40.0dip"
        android:layout_height="fill_parent"
        android:paddingLeft="11.0dip"
        android:paddingRight="21.0dip"
        android:src="@mipmap/img_new_back_black" />

    <TextView
        android:id="@+id/text_top_centent"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="测试"
        android:textColor="@color/color_333333"
        android:textSize="16.0dip" />

    <LinearLayout
        android:id="@+id/ll_top_zixun"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10.0dip"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:id="@+id/img_top_right"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:adjustViewBounds="true"
            android:scaleType="center"
            android:src="@mipmap/img_homefra_kf" />

        <TextView
            android:id="@+id/text_top_right"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="资讯"
            android:textColor="@color/color_333333"
            android:textSize="14.0dip" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_kefu"
            android:layout_width="40.0dip"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="bottom"
                android:adjustViewBounds="true"
                android:scaleType="center"
                android:src="@mipmap/img_homefra_kf" />
        </LinearLayout>

        <ImageView
          android:id="@+id/share_video_kecheng"
            android:layout_width="50.0dip"
            android:layout_height="50.0dip"
            android:adjustViewBounds="true"
            android:scaleType="center"
            android:src="@mipmap/img_share"
            android:visibility="gone" />
    </LinearLayout>
</RelativeLayout>