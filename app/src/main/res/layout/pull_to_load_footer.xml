<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <LinearLayout
        android:id="@+id/pull_to_load_footer_content"
        android:layout_width="fill_parent"
        android:layout_height="60.0dip"
        android:background="@color/white"
        android:gravity="center"
        android:padding="0.0dip">

        <ProgressBar
            android:id="@+id/pull_to_load_footer_progressbar"
            android:layout_width="28.0dip"
            android:layout_height="28.0dip"
            android:layout_marginRight="8.0dip"
            android:gravity="center"
            android:indeterminateDrawable="@anim/update_loading_progressbar_anim"
            android:visibility="visible" />

        <TextView
            android:id="@+id/pull_to_load_footer_hint_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pull_to_refresh_header_hint_loading"
            android:textColor="#ff999999"
            android:textSize="14.0dip" />
    </LinearLayout>
</LinearLayout>