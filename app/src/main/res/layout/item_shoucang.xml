<?xml version="1.0" encoding="utf-8"?>
<com.udit.bankexam.view.ShadowContainer xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:minHeight="116.0dip"
    app:containerCornerRadius="4.0dip"
    app:containerDeltaLength="8.0dip"
    app:containerShadowColor="#78dbdbdb"
    app:containerShadowRadius="8.0dip"
    app:deltaX="0.0dip"
    app:deltaY="4.0dip">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="100.0dip"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
          android:id="@+id/layout1"
            android:layout_width="fill_parent"
            android:layout_height="51.0dip"
            android:orientation="horizontal">

            <TextView
               android:id="@+id/textview_kecheng_name"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:paddingLeft="9.5dip"
                android:paddingRight="9.5dip"
                android:text="通用就业能力测试"
                android:textColor="@color/color_343434"
                android:textSize="15.0dip"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="16.0dip"
            android:layout_below="@+id/layout1"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="11.0dip"
                android:layout_height="11.0dip"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8.5dip"
                android:src="@mipmap/img_clock" />

            <TextView
               android:id="@+id/textview_kecheng_time"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="6.0dip"
                android:gravity="center_vertical"
                android:text="2017.03.18-2017.04.17"
                android:textColor="@color/color_9a9a9a"
                android:textSize="12.0dip" />

            <TextView
               android:id="@+id/textview_kecheng_num"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="13.0dip"
                android:gravity="center_vertical"
                android:textColor="@color/color_343434"
                android:textSize="12.0dip" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="2.0dip"
            android:orientation="horizontal"
            android:paddingLeft="10.0dip"
            android:paddingTop="2.0dip"
            android:paddingBottom="5.0dip"
            android:visibility="gone">

            <TextView
                style="@style/style_item_zb_info_2"
                android:text="授课老师：" />

            <TextView
                android:id="@+id/textview_kecheng_teacher"
                style="@style/style_item_zb_info_2"
                android:text="张三 李四" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_buy"
            android:layout_width="fill_parent"
            android:layout_height="16.0dip"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10.0dip">

            <ImageView
                android:id="@+id/img"
                android:layout_width="11.0dip"
                android:layout_height="11.0dip"
                android:layout_centerVertical="true"
                android:layout_marginLeft="9.0dip"
                android:src="@mipmap/img_small_people" />

            <TextView
              android:id="@+id/tv_buy_num"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="4.0dip"
                android:layout_toRightOf="@+id/img"
                android:gravity="center_vertical"
                android:text="0人已购"
                android:textColor="@color/color_9999999"
                android:textSize="12.0dip" />
        </RelativeLayout>

        <TextView
            android:layout_width="75.0dip"
            android:layout_height="25.0dip"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="12.0dip"
            android:layout_marginBottom="13.0dip"
            android:background="@drawable/shape_125_stroke_558cf4_bg"
            android:gravity="center"
            android:text="去学习"
            android:textColor="@color/white"
            android:textSize="13.0dip" />
    </RelativeLayout>
</com.udit.bankexam.view.ShadowContainer>