<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="5.0"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View style="@style/style_view_h" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:minHeight="25.0dip"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:layout_width="40.0dip"
                    android:layout_height="fill_parent"
                    android:adjustViewBounds="true"
                    android:scaleType="center"
                    android:src="@mipmap/shipin_zhishidian_icon_play" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:gravity="center_vertical"
                    android:text="测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试"
                    android:textColor="@color/back"
                    android:textSize="12.0sp" />

                <ImageView
                    android:id="@+id/image_share"
                    android:layout_width="40.0dip"
                    android:layout_height="fill_parent"
                    android:adjustViewBounds="true"
                    android:scaleType="center"
                    android:src="@mipmap/shipin_zhishidian_btn_share" />
            </LinearLayout>

            <View style="@style/style_view_h" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:minHeight="30.0dip"
                android:orientation="horizontal"
                android:paddingLeft="30.0dip"
                android:paddingRight="30.0dip"
                android:visibility="gone">

                <View
                    android:layout_width="0.0dip"
                    android:layout_height="1.0dip"
                    android:layout_weight="1.0"
                    android:background="@mipmap/shipin_zhishidian_line_blue" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="5.0dip"
                    android:adjustViewBounds="true"
                    android:scaleType="center"
                    android:src="@mipmap/shipin_icon_tips" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="2.0dip"
                    android:layout_marginRight="5.0dip"
                    android:gravity="center"
                    android:text="知识要点"
                    android:textColor="@color/color_top"
                    android:textSize="12.0sp" />

                <View
                    android:layout_width="0.0dip"
                    android:layout_height="1.0dip"
                    android:layout_weight="1.0"
                    android:background="@mipmap/shipin_zhishidian_line_blue" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/flowlayout_zs"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical" />
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="58dp">

        <com.udit.bankexam.view.ShadowContainer
            android:layout_width="match_parent"
            android:layout_height="8dp"
            app:containerCornerRadius="4dp"
            app:containerDeltaLength="4dp"
            app:containerShadowColor="#dddddd"
            app:containerShadowRadius="4dp"
            app:deltaX="0.0dip"
            app:deltaY="4.0dip">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white" />

        </com.udit.bankexam.view.ShadowContainer>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_marginTop="13dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/ll_line_ke"
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:adjustViewBounds="true"
                    android:scaleType="center"
                    android:src="@mipmap/img_homefra_kf" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="在线客服"
                    android:textColor="@color/color_333333"
                    android:textSize="14dp" />

            </LinearLayout>

            <TextView
                android:visibility="gone"
                android:id="@+id/tv_line"
                android:layout_width="0.5dp"
                android:layout_height="30dp"
                android:background="#f7f7f7" />

            <LinearLayout
                android:layout_marginRight="15dp"
                android:id="@+id/ll_zx"
                android:layout_width="60dp"
                android:layout_height="45dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:adjustViewBounds="true"
                    android:scaleType="center"
                    android:src="@mipmap/img_zx" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="咨询"
                    android:textColor="@color/color_333333"
                    android:textSize="14dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/textview_last"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/shape_20_corner_f79b38_bg"
                android:gravity="center"
                android:paddingLeft="18dp"
                android:paddingRight="18dp"
                android:text="上一个知识点"
                android:textColor="@color/white"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/textview_next"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:background="@drawable/shape_20_corner_558cf4_bg"
                android:gravity="center"
                android:paddingLeft="18dp"
                android:layout_marginRight="10dp"
                android:paddingRight="18dp"
                android:text="下一个知识点"
                android:textColor="@color/white"
                android:textSize="15dp" />

            <TextView
                android:visibility="gone"
                android:id="@+id/textview_exam"
                android:layout_width="80.0dip"
                android:layout_height="fill_parent"
                android:layout_marginLeft="10.0dip"
                android:background="@drawable/drawable_video_exam_btn"
                android:gravity="center"
                android:paddingTop="3.0dip"
                android:paddingBottom="3.0dip"
                android:text="试题测试"
                android:textColor="@color/white"
                android:textSize="12.0sp" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>